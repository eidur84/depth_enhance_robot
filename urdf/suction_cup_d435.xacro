 <joint name="cam_joint" type="fixed">
     <parent link="shift_origin" />
     <child link="picking_camera_link" />
<!--Offset a camera link, breyta <origin rpy="${-pi/2} ${-pi/2} ${-pi/2} " xyz="0 -0.0175 0.01015"/>-->
