<!--
Breyta offset fyrir myndavel og sensor_d435 i L515 
x er i att ad i att ad vegg ef hann er i upphafsstodu
y er i att ad tokkum
-->
<link name="c_link" />
<xacro:sensor_d435 parent="c_link">
  <!--<origin xyz="0.01015 0.05 -0.0125" rpy="${pi/2} 0 0"/>-->
  <!-- Camera sligthly tilted: Roll adjusted by 0.02 radians pitch adjusted by 0.025 radians -->
  <!-- <origin xyz="0 0 0" rpy="${pi+0.02} ${-pi/2-0.025} 0"/> -->
  <origin xyz="-0.0125 0 ${0.0125-0.002}" rpy="${pi} ${-pi/2} 0"/>

</xacro:sensor_d435>

<!-- Roll adjusted here since roll seems to control yaw for the d435 xacro sensor -->
<joint name="basetocam" type="fixed">
  <parent link="shift_origin"/>
  <child link="c_link" />
  <!-- <origin rpy="0.02 -0.045 0 " xyz="0.02 0 0"/> -->
  <origin rpy="0.026 -0.01 0 " xyz="0.02 0 0"/>
  <!-- <origin rpy="0 0 0 " xyz="0.02 0 0"/> -->
</joint>

<!-- R: 0.28 acceptable -->

